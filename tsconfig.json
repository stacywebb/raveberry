{
  "compilerOptions": {
    "outDir": "./frontend/js",
	"baseUrl": "./",
    "allowJs": true,
    "target": "es6",
	"moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
	"lib": [
		"dom",
		"es7"
	],
	"paths": {
		"@src/*": ["frontend/ts/*"]
	}
  },
  "include": ["./frontend/ts/**/*"]
}
