{
  "compilerOptions": {
    "outDir": "./static/js",
	"baseUrl": "./",
    "allowJs": true,
    "target": "es6",
	"moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
	"lib": [
		"dom",
		"es7"
	],
	"paths": {
		"/static/libs/*": ["node_modules/*"],
		"@src/*": ["static/ts/*"]
	}
  },
  "include": ["./static/ts/**/*"]
}
